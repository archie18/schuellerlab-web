{% extends "@LDMMain/baseUser.html.twig" %}

{% block main_header %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-12">
            <h2>
                <span class="text-navy">IPre</span>
            </h2>
            <ol class="breadcrumb">
                <li class="active">
                    <a href="{{ path('ldm_ipre') }}">IPre</a>
                </li>
            </ol>
        </div>
    </div>
{% endblock main_header %}


{% block main_content %}
    <div class="ibox float-e-margins m-t-xl">
        <div class="ibox-content text-left p-lg">

            <div class="container_ipre">
                {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                {# <form action="/action_page.php"> #}
                <div class="row">
                    <div class="col-25">
                        {{ form_label(form.compound, 'Compound (Name or Smiles)') }}
                    </div>
                    <div class="col-75">
                        {{ form_widget(form.compound) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                    {{ form_label(form.target) }}
                    </div>
                    <div class="col-75">
                    {{ form_widget(form.target) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                    {{ form_label(form.similarity, 'Similarity (Optional)') }}
                    </div>
                    <div class="col-75">
                    {{ form_widget(form.similarity, {'type':'number', 'min':'10', 'max':'100'}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-25">
                    {{ form_label(form.pubmed, 'Database') }}
                    </div>
                    <div class="col-75">
                    {{ form_widget(form.pubmed) }} {{ form_label(form.pubmed) }}
                    {{ form_widget(form.pmc) }} {{ form_label(form.pmc, 'Pubmed Central') }}
                    </div>
                </div>
                <br>
                <div class="row">
                {{ form_end(form) }}
                </div>
            </div>

            <br>

            {{ resp | raw}}

        </div>
    </div>


<script>
    function myFunction() {
        var x = document.getElementById("myDIV");

        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }

    document.addEventListener("DOMContentLoaded", function (event) {
        myFunction();
    });
</script>


{% endblock main_content %}
